<!DOCTYPE html>
<html lang="mk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spisok na studenti</title>
  </head>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      margin-top: 35px;
      flex-direction: column;
      align-items: center;
    }
    header {
      display: flex;
      justify-content: center;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 8px;
      width: 360px;
      background-color: #f9f9f97a;
    }
    header a {
      color: green;
      text-decoration: none;
      font-size: 16px;
      margin: 0 10px;
      padding: 5px;
    }
  </style>
  <body>
    <%- include ("partials/navigation-template")%>

    <h1>Spisok na studenti</h1>
    <table border="1" width="100%">
      <thead>
        <tr>
          <th>Ime</th>
          <th>Prezime</th>
          <th>Prosek</th>
          <th>Akcija</th>
        </tr>
      </thead>
      <tbody>
        <% studentData.forEach((student, index) => { %>
        <tr>
          <td><%= student.ime %></td>
          <td><%= student.prezime %></td>
          <td><%= student.prosek %></td>
          <td><a href="/brishi?i=<%= index %>">Brishi</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
